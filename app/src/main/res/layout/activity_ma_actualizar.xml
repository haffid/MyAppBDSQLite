<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MA_Actualizar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        android:text="Actualizar Mascota"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtBuscarMascotaU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="25sp"
            android:hint="ID de Mascota"
            android:inputType="number"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnBuscarMascotaU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:text="Buscar"
            android:textSize="20sp"
            android:onClick="update"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="20sp"
        />
    <EditText
        android:id="@+id/edtNombreU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="-------"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza:"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="25sp"
        />

    <EditText
        android:id="@+id/edtRazaU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="-------"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="25sp"
        />

    <EditText
        android:id="@+id/edtColorU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="-------"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad:"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="25sp"
        />

    <EditText
        android:id="@+id/edtEdadU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="-------"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btnActulizarMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:text="Actualizar"
        android:textSize="20sp"
        android:onClick="update"
        />

</LinearLayout>